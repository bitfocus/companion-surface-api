{
    "name": "@companion-surface/api",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "run build:schema && run build:root",
        "build:clean": "(rm -rf ./packages/*/dist ./packages/*/generated ./packages/*/*.tsbuildinfo || true) && run build",
        "build:root": "tsc --build tsconfig.build.json",
        "build:schema": "cd packages/companion-surface-base && node ./tools/schema-compile.mjs",
        "dev": "run build:root --watch",
        "lint": "eslint .",
        "unit": "vitest run",
        "unit:watch": "vitest"
    },
    "engines": {
        "node": "^22.21"
    },
    "devDependencies": {
        "@companion-module/tools": "^2.4.2",
        "@tsconfig/node22": "^22.0.5",
        "@types/node": "^22.19.3",
        "esbuild": "^0.27.1",
        "eslint": "^9.39.2",
        "json-schema-to-typescript": "^15.0.4",
        "prettier": "^3.7.4",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.50.0",
        "vitest": "^4.0.15",
        "vitest-mock-extended": "^3.1.0",
        "zx": "^8.8.5"
    },
    "packageManager": "yarn@4.10.3"
}
