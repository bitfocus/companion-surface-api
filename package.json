{
    "name": "@companion-surface/api",
    "license": "MIT",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "run build:schema && run build:root",
        "build:root": "tsc --build tsconfig.build.json",
        "build:schema": "cd packages/companion-surface-base && node ./tools/schema-compile.mjs",
        "dev": "run build:root --watch",
        "lint": "eslint .",
        "unit": "vitest run",
        "unit:watch": "vitest"
    },
    "engines": {
        "node": "^22.14"
    },
    "devDependencies": {
        "@companion-module/tools": "^2.4.2",
        "@tsconfig/node22": "^22.0.2",
        "@types/node": "^22.18.11",
        "eslint": "^9.38.0",
        "json-schema-to-typescript": "^15.0.4",
        "prettier": "^3.6.2",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.1",
        "vitest": "^3.2.4",
        "vitest-mock-extended": "^3.1.0",
        "zx": "^8.8.5"
    },
    "packageManager": "yarn@4.10.3"
}
